<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simon.mapper.FontAwesomeMapper">
  <resultMap id="BaseResultMap" type="com.simon.model.FontAwesome">
    <!--
      WARNING - @mbg.generated
    -->
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="create_by" jdbcType="BIGINT" property="createBy" />
    <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
    <result column="update_by" jdbcType="BIGINT" property="updateBy" />
    <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
    <result column="icon_class" jdbcType="VARCHAR" property="iconClass" />
    <result column="label_en_us" jdbcType="VARCHAR" property="labelEnUs" />
    <result column="label_zh_cn" jdbcType="VARCHAR" property="labelZhCn" />
    <result column="order_num" jdbcType="INTEGER" property="orderNum" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>

  <resultMap id="FontAwesomeDtoMap" type="com.simon.dto.FontAwesomeDto">
    <result column="icon_class" jdbcType="VARCHAR" property="iconClass" />
    <result column="label" jdbcType="VARCHAR" property="label" />
  </resultMap>

  <select id="getList" resultMap="BaseResultMap" databaseId="mysql">
    select * from t_s_font_awesome
    <where>
      <if test="labelEnUs != null and labelEnUs != ''">
        label_en_us like CONCAT('%', #{labelEnUs}, '%')
      </if>
      <if test="labelZhCn != null and labelZhCn != ''">
        and label_zh_cn like CONCAT('%', #{labelZhCn}, '%')
      </if>
    </where>
  </select>

  <select id="getList" resultMap="BaseResultMap" databaseId="postgresql">
    select * from t_s_font_awesome
    <where>
      <if test="labelEnUs != null and labelEnUs != ''">
        label_en_us like CONCAT('%', #{labelEnUs}, '%')
      </if>
      <if test="labelZhCn != null and labelZhCn != ''">
        and label_zh_cn like CONCAT('%', #{labelZhCn}, '%')
      </if>
    </where>
  </select>

  <select id="getList" resultMap="BaseResultMap" databaseId="oracle">
    select * from t_s_font_awesome
    <where>
      <if test="labelEnUs != null and labelEnUs != ''">
        label_en_us like CONCAT(CONCAT('%', #{labelEnUs}), '%')
      </if>
      <if test="labelZhCn != null and labelZhCn != ''">
        and label_zh_cn like CONCAT(CONCAT('%', #{labelZhCn}), '%')
      </if>
    </where>
  </select>

  <select id="getList" resultMap="BaseResultMap" databaseId="sqlserver">
    select * from t_s_font_awesome
    <where>
      <if test="labelEnUs != null and labelEnUs != ''">
        label_en_us like CONCAT('%', #{labelEnUs}, '%')
      </if>
      <if test="labelZhCn != null and labelZhCn != ''">
        and label_zh_cn like CONCAT('%', #{labelZhCn}, '%')
      </if>
    </where>
  </select>

  <select id="getDtos" resultMap="FontAwesomeDtoMap">
    select
    icon_class,
    label_${language} as label
     from t_s_font_awesome where status = 1 order by order_num
  </select>

  <select id="countByIconClass" parameterType="string" resultType="int">
    select count(id) from t_s_font_awesome where icon_class=#{iconClass}
  </select>
</mapper>